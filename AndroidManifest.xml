<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.navigationdrawerexample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:name="com.geekytheory.orderregister.libraries.GlobalVariables"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyAppTheme" 
        android:allowBackup="true">
        <activity
            android:name="com.geekytheory.orderregister.MyprofileActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/Myprofile"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.geekytheory.orderregister.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.geekytheory.orderregister.CatalogActivity"
            android:label="@string/title_activity_catalog" 
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.geekytheory.orderregister.HistoryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" 
            android:screenOrientation="landscape"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="com.geekytheory.orderregister.AddOrderActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_add_order" >
        </activity>
        <activity
            android:name="com.geekytheory.orderregister.AddClientActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_add_client" >
        </activity>
        <activity
            android:name="com.geekytheory.orderregister.ClientListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_client_list" >
        </activity>
    </application>

</manifest>