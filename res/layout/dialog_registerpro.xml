<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
    
			<LinearLayout
			android:layout_width="570dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:paddingTop="30dp"
			android:paddingRight="20dp"
			android:paddingLeft="20dp"
			android:paddingBottom="20dp"
			android:orientation="vertical"
			android:background="#09c"
			>
						<LinearLayout 
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:orientation="vertical"
						    android:gravity="center"
						    android:background="@drawable/rounded_edittext"
						    >
						<LinearLayout
						android:layout_width="520dp"
						android:layout_height="match_parent"
						android:paddingBottom="20dp"
						android:paddingLeft="20dp"
						android:orientation="horizontal">

							<ImageView
							    android:id="@+id/img_producto_dialog"
							    android:layout_width="200dp"
							    android:layout_height="200dp"
							    android:src="@drawable/pro_compresora_karson"
							    android:contentDescription="@string/content_desc_img_producto" />

							<LinearLayout
							    android:layout_width="240dp"
							    android:layout_marginLeft="40dp"
							    android:layout_height="match_parent"
							    android:orientation="vertical" >
							    		
							    	<LinearLayout
							    	    android:layout_width="240dp"
							    	    android:layout_height="90dp"
							    	    android:orientation="vertical"
							    	    android:paddingTop="5dp" >

									    	<TextView
									        android:id="@+id/txt_nomproducto_dialog"
									        android:layout_width="match_parent"
									        android:layout_height="wrap_content"
									        android:textColor="#222"
									        android:maxLines="3"
									        android:typeface="sans"
									        android:textSize="19sp"
									        android:textStyle="italic|bold"
									        android:text="ExtensiÃ³n profesional naranja x 50 ms" />

									    	<TextView
									    	    android:id="@+id/txt_codigo_dialog"
									    	    android:layout_width="wrap_content"
									    	    android:layout_height="wrap_content"
									    	    android:layout_marginTop="5dp"
									    	    android:text="1564515656"
									    	    android:textColor="#555"
									    	    android:textSize="15sp" />

							    	</LinearLayout>
							    	
							    	<LinearLayout 
							    	    android:layout_width="240dp"
							    	    android:layout_height="55dp"
							    	    android:orientation="horizontal"
							    	    android:gravity="center|left"
							    	    android:padding="5dp"
							    	    >

							    		<ImageView
							    		    android:id="@+id/img_marca_dialog"
							    		    android:layout_width="wrap_content"
							    		    android:layout_height="wrap_content"
							    		    android:src="@drawable/stanley"
							    		    android:contentDescription="@string/content_desc_img_marca" />
							    	    
							    	</LinearLayout>
							    	
							    	<RelativeLayout 
							    	    android:layout_width="240dp"
							    	    android:layout_height="55dp">

							    		<ImageButton
							    		    android:id="@+id/btn_car_dialog"
							    		    android:layout_width="wrap_content"
							    		    android:layout_height="wrap_content"
							    		    android:layout_alignParentRight="true"
							    		    android:layout_alignParentBottom="true"
							    		    android:textAlignment="textEnd"
							    		    android:layout_marginRight="10dp"
							    		    android:src="@drawable/car"
							    		    android:contentDescription="@string/content_desc_img_car" />

							    		<EditText
							    		    android:id="@+id/txt_precio_dialog"
							    		    android:padding="5dp"
							    		    android:layout_width="wrap_content"
							    		    android:layout_height="wrap_content"
							    		    android:layout_alignParentLeft="true"
							    		    android:layout_centerVertical="true"
							    		    android:background="#ccc"
							    		    android:cursorVisible="false" 
									        android:focusable="false" 
									        android:focusableInTouchMode="false"
							    		    android:clickable="false"
							    		    android:text="S/ 209.90"
							    		    android:textColor="#1f971f"
							    		    android:textStyle="bold|italic"
							    		    android:textSize="20sp" />
							    	    
							    	</RelativeLayout>
							    	
							</LinearLayout>
						    
						</LinearLayout>

						<TextView
						    android:id="@+id/textView2"
						    android:layout_width="520dp"
						    android:layout_height="wrap_content"
						    android:paddingTop="40dp"
						    android:paddingLeft="30dp"
						    android:paddingRight="20dp"
						    android:textSize="20sp"
						    android:text="@string/label_descripcion_pro" />

						<EditText
						    android:id="@+id/txt_desc_dialog"
						    android:layout_width="520dp"
						    android:layout_height="wrap_content"
						    android:paddingLeft="30dp"
						    android:paddingTop="20dp"
						    android:layout_marginBottom="20dp"
						    android:ems="10"
						    android:inputType="textMultiLine" 
						    android:cursorVisible="false" 
					        android:focusable="false" 
					        android:focusableInTouchMode="false"
			    		    android:clickable="false"
						    android:lines="5"
						    android:background="#fff">

						</EditText>
				</LinearLayout>
						<RelativeLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="20dp" >

								    	<Button
								    	    android:id="@+id/btn_gotopedido_dialog"
								    	    android:layout_width="wrap_content"
								    	    android:layout_height="wrap_content"
								    	    android:layout_alignParentRight="true"
								    	    android:layout_alignParentTop="true"
								    	    android:background="@drawable/rounded_green"
								    	    android:fontFamily="sans-serif-condensed"
								    	    android:text="@string/ir_registrar"
								    	    android:textSize="25sp"
								    	    android:paddingRight="20dp"
								    	    android:paddingLeft="20dp"
								    	    android:visibility="invisible"
								    	    android:textStyle="bold" />

						</RelativeLayout>
						
			</LinearLayout>
    

</RelativeLayout>