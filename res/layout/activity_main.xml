<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp" >

        <TextView
            android:id="@+id/btnaddorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="230dp"
            android:drawableTop="@drawable/ic_order"
            android:text="@string/nuevopedido"
            android:textColor="#fff"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/btncatalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="210dp"
            android:drawableTop="@drawable/ic_catalog"
            android:text="@string/catalogo" 
            android:textSize="30sp"
            android:textColor="#fff"
             />

        <TextView
            android:id="@+id/btnaddclient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_addclient"
            android:text="@string/agregarcliente" 
            android:textSize="30sp"
            android:textColor="#fff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="150dp">
        
        <TextView
            android:id="@+id/btnhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="280dp"
            android:drawableTop="@drawable/ic_history"
            android:paddingLeft="15dp"
            android:text="@string/historial" 
            android:textSize="30sp"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/btnmisdatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="230dp"
            android:drawableTop="@drawable/ic_myprofile"
            android:text="@string/misdatos"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btnclientlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_clientlist"
            android:text="@string/listacliente" 
            android:textSize="30sp"
            android:textColor="#fff"
            />
    </LinearLayout>

</LinearLayout>